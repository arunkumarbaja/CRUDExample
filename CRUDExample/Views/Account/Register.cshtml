@model RegisterDTO

<div class="container">

</div>

<form action="/" method="post">

<div class="form-label flex">
	<div class="w-25">
			<label asp-for="PersonName" class="form-label">Person Name</label>
	</div>
	<div class="flex-1">
			<input asp-for="PersonName" class="form-label" />
	</div>
	<span asp-validation-for="PersonName" class="text-red"></span>
</div>


	<div class="form-label flex">
	<div class="w-25">
		<label asp-for="Email" class="form-label">Email</label>
	</div>
	<div class="flex-1">
		<input asp-for="Email" class="form-label" />
	</div>
	<span asp-validation-for="Email" class="text-red"></span>
	</div>

	<div class="form-label flex">
		<div class="w-25">
			<label asp-for="PhoneNumber" class="form-label">Email</label>
		</div>
		<div class="flex-1">
			<input asp-for="PhoneNumber" class="form-label" />
		</div>
		<span asp-validation-for="PhoneNumber" class="text-red"></span>
	</div>

	<div class="form-label flex">
		<div class="w-25">
			<label asp-for="Password" class="form-label">Email</label>
		</div>
		<div class="flex-1">
			<input asp-for="Password" class="form-label" />
		</div>
		<span asp-validation-for="Password" class="text-red"></span>
	</div>

	<div class="form-label flex">
		<div class="w-25">
			<label asp-for="ConfirmPassword" class="form-label">Email</label>
		</div>
		<div class="flex-1">
			<input asp-for="ConfirmPassword" class="form-label" />
		</div>
		<span asp-validation-for="ConfirmPassword" class="text-red"></span>
	</div>

	<div class="button-green-back">
		<button type="submit" class="button-green-back">Register</button>
	</div>
</form>